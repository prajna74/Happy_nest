<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="12dp"
    tools:context=".Register">


    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="234dp"
        android:layout_height="132dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="74dp"
        android:layout_marginLeft="74dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="579dp"
        android:paddingBottom="20sp"
        android:src="@drawable/logohome"></ImageView>

    <TextView
        android:layout_width="361dp"
        android:layout_height="42dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="144dp"
        android:layout_marginEnd="38dp"
        android:layout_marginRight="38dp"
        android:layout_marginBottom="533dp"
        android:fontFamily="@font/bangers"
        android:text="HELLO THERE!"
        android:textSize="40sp" />

    <EditText
        android:id="@+id/name"
        android:layout_width="329dp"
        android:layout_height="39dp"
        android:background="@drawable/custom_input"
        android:hint="Name"
        android:padding="7dp"
        android:textSize="20dp"
        android:layout_marginStart="35dp"
        android:layout_marginTop="220dp"
        android:layout_marginLeft="35dp" />

    <EditText
        android:id="@+id/username"
        android:layout_width="329dp"
        android:layout_height="39dp"
        android:background="@drawable/custom_input"
        android:hint="Username"
        android:padding="7dp"
        android:textSize="20dp"
        android:layout_marginStart="35dp"
        android:layout_marginTop="270dp"
        android:layout_marginLeft="35dp" />

    <EditText
        android:id="@+id/email"
        android:layout_width="329dp"
        android:layout_height="39dp"
        android:background="@drawable/custom_input"
        android:hint="Email"
        android:padding="7dp"
        android:textSize="20dp"
        android:layout_marginStart="35dp"
        android:layout_marginTop="320dp"
        android:layout_marginLeft="35dp" />

    <EditText
        android:id="@+id/pass"
        android:layout_width="329dp"
        android:layout_height="39dp"
        android:background="@drawable/custom_input"
        android:hint="Password"
        android:inputType="textPassword"
        android:padding="7dp"
        android:textSize="20dp"
        android:layout_marginStart="35dp"
        android:layout_marginTop="370dp"
        android:layout_marginLeft="35dp" />

    <EditText
        android:id="@+id/c_pass"
        android:layout_width="329dp"
        android:layout_height="39dp"
        android:background="@drawable/custom_input"
        android:hint="Confirm Password"
        android:inputType="textPassword"
        android:padding="7dp"
        android:textSize="20dp"
        android:layout_marginStart="35dp"
        android:layout_marginTop="420dp"
        android:layout_marginLeft="35dp"
        />

    <ImageButton
        android:id="@+id/reg"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:background="@color/White"
        android:scaleType="fitXY"
        android:src="@drawable/sgnbuttom"
        android:layout_marginStart="135dp"
        android:layout_marginTop="480dp"
        android:layout_marginLeft="135dp" />

    <TextView
        android:id="@+id/loginUser"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="100dp"
        android:layout_marginTop="540dp"
        android:hint="Already have an account? Login here"
        android:textSize="17sp"
        android:layout_marginLeft="100dp" />
</RelativeLayout>